{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}
    <div class="container2">
        <br>
        <h2 class="text-center mb-0">Mot de passe oublié</h2><br><br>
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <form method="post" action="">
                    <div class="control-group">
                        {{ form_start(passwordForgotForm, {'attr': {'class': 'row'}}) }}
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label for="title">Nom d'utilisateur : </label><br>
                            {{ form_widget(passwordForgotForm.username, {'attr': {'placeholder': 'Nom d\'utilisateur', 'class': 'formStyle'}}) }}
                            <span class="error">{{ form_errors(passwordForgotForm.username) }}</span>
                        </div>
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <input type="submit" name="" class="btn btn-primary" value="Demander un nouveau mot de passe">
                        </div>
                        {{ form_end(passwordForgotForm) }}
                        <br><br><br><br><br>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
